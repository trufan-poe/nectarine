<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="csrf-token" content={get_csrf_token()}/>
    <title>Nectarine Credit Approval</title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"}/>
    
    <!-- LiveView client from CDN -->
    <script type="module">
      import {Socket} from "https://cdn.jsdelivr.net/npm/phoenix/+esm";
      import {LiveSocket} from "https://cdn.jsdelivr.net/npm/phoenix_live_view/+esm";

      const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
      const liveSocket = new LiveSocket("/live", Socket, { params: { _csrf_token: csrfToken } });
      liveSocket.connect();
      window.liveSocket = liveSocket;
    </script>
  </head>
  <body>
    <header class="container">
      <nav role="navigation">
        <h1>Nectarine Credit Approval</h1>
      </nav>
    </header>
    <main class="container">
      <%= @inner_content %>
    </main>
  </body>
</html>